<Window x:Class="SAPAPP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SAP APP"
        Height="768" Width="1366"
        WindowState="Maximized"
        ResizeMode="CanResize"
        SizeToContent="Manual"
        SizeChanged="Window_SizeChanged">

    <Window.Resources>
        <Style TargetType="MenuItem" x:Key="SubMenuItemStyle">
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="GridBackground">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <ImageBrush ImageSource="/Resources/st-hero-min-1024x667(9).png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Overlay -->
        <Border x:Name="OverlayContainer" Visibility="Collapsed"
                Background="Black" Opacity="0.8" CornerRadius="10" Margin="40">
            <Grid>
                <TextBlock x:Name="OverlayContent" Foreground="White" FontSize="18"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Content="Close" Width="120" Height="40"
                        VerticalAlignment="Bottom" HorizontalAlignment="Center"
                        Click="CloseOverlay_Click"/>
            </Grid>
        </Border>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="black" Foreground="white">
            <MenuItem Header="_File">
                <MenuItem Header="_Close" Click="CloseFile_Click" Style="{StaticResource SubMenuItemStyle}"/>
            </MenuItem>
            <MenuItem Header="_Settings">
                <MenuItem Header="Preferences" Click="Preferences_Click" Style="{StaticResource SubMenuItemStyle}"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="Wiki" Click="Wiki_Click" Style="{StaticResource SubMenuItemStyle}"/>
            </MenuItem>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70*"/>
                <ColumnDefinition Width="30*"/>
            </Grid.ColumnDefinitions>

            <Canvas x:Name="MainCanvas" Background="Transparent"
            HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                <!-- Adjusted PCB Picker -->
                <DockPanel Margin="100,100,0,0" Width="500" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Label x:Name="ProductLabel" Content="Part" DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    <ComboBox x:Name="ProductPicker"
              DockPanel.Dock="Top"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Width="500" Height="40"
              ItemsSource="{Binding ProductsList}"
              SelectedItem="{Binding SelectedProduct, Mode=TwoWay}"
              Background="LightGray" Foreground="Black"
              BorderBrush="Black" BorderThickness="1"
              Cursor="Hand"/>
                </DockPanel>

                <!-- Adjusted Product Picker -->
                <DockPanel Margin="100,250,0,0" Width="500" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Label x:Name="PartLabel" Content="Product" DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="32" FontWeight="Bold" Foreground="White"/>
                    <ComboBox x:Name="PartPicker"
              DockPanel.Dock="Top"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Width="500" Height="40"
              ItemsSource="{Binding PartsList}"
              SelectedItem="{Binding SelectedPart, Mode=TwoWay}"
              Background="LightGray" Foreground="Black"
              BorderBrush="Black" BorderThickness="1"
              Cursor="Hand"/>
                </DockPanel>
                <!-- Buttons Section -->
                <DockPanel Canvas.Left="100" Canvas.Top="420">
                    <Button x:Name="StartButton" Width="280" Height="100"
                            Background="LightGray" Foreground="White" BorderBrush="#666" BorderThickness="1"
                            Cursor="Hand" Click="StartButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Gray"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="LightGray"/>
                                <Style.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="Green"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="Start" FontSize="40" Padding="20"/>
                    </Button>

                    <Button x:Name="StopButton" Width="280" Height="100"
                            Background="LightGray" Foreground="White" BorderBrush="#666" BorderThickness="1"
                            Cursor="Hand" Click="StopButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Gray"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="LightGray"/>
                                <Style.Triggers>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <TextBlock Text="Stop" FontSize="40" Padding="20"/>
                    </Button>
                </DockPanel>
            </Canvas>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Name="sbar" Grid.Row="2" Background="black" Foreground="white" Height="30">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <ProgressBar x:Name="progbar" Width="100" Height="20"/>
                    <TextBlock x:Name="progressPercentage" Margin="10,0,0,0" VerticalAlignment="Center" Text="0%"/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <TextBlock x:Name="StatusMessageDisplay"><Run Text="Ready to download"/></TextBlock>
        </StatusBar>
    </Grid>
</Window>