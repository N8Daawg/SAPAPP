<Window x:Class="SAPAPP.PreferencesDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Preferences" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="White">
    <!-- White Background -->

    <!-- Yellow Border -->
    <Border BorderBrush="#EED202" BorderThickness="10" Margin="5">
        <Grid Margin="20">
            <!-- Added spacing -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <!-- Slightly widened -->
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Preferences Title -->
            <TextBlock Text="Preferences" FontSize="24" FontWeight="Bold" Grid.Row="0" Grid.ColumnSpan="3"
                       HorizontalAlignment="Left" Margin="0,0,0,15" Foreground="Black"/>
            <!-- Increased Font Size -->

            <!-- Log File Selection -->
            <Label Content="Log File:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Foreground="Black"/>
            <TextBox x:Name="LogTextBox" Grid.Row="1" Grid.Column="1" Margin="5" Height="35"/>
            <!-- Increased Height -->
            <Button Content="Browse Log" Grid.Row="1" Grid.Column="2" Margin="5" Padding="8,3" Click="BrowseLog_Click"/>
            <!-- Renamed to avoid duplicate Content -->

            <!-- Config File Selection -->
            <Label Content="Config File:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Foreground="Black"/>
            <TextBox x:Name="ConfigTextBox" Grid.Row="2" Grid.Column="1" Margin="5" Height="35"/>
            <!-- Increased Height -->
            <Button Content="Browse Config" Grid.Row="2" Grid.Column="2" Margin="5" Padding="8,3" Click="BrowseConfig_Click"/>
            <!-- Renamed to avoid duplicate Content -->

            <!-- Action Buttons -->
            <StackPanel Grid.Row="3" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="15">
                <Button Content="OK" Width="120" Height="40" Margin="10" Click="Ok_Click"/>
                <!-- Enlarged Button -->
                <Button Content="Cancel" Width="120" Height="40" Margin="10" Click="Cancel_Click"/>
                <!-- Enlarged Button -->
            </StackPanel>
        </Grid>
    </Border>
</Window>