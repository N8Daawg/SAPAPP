<Window x:Class="SAPAPP.WikiDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Swiss-Army Programmer Wiki" Height="700" Width="850"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#EED202">
    <!-- Gold Background -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Gray Overlay -->
        <Border Background="#808080" Opacity="0.3" Grid.Row="1"/>

        <!-- Title Header -->
        <Border Grid.Row="0" Padding="15" Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
            <TextBlock Text="Welcome to the Swiss-Army Programmer Wiki" FontSize="22" FontWeight="Bold" TextAlignment="Center" Foreground="Black"/>
        </Border>

        <!-- Tab Control for Different Pages -->
        <TabControl Grid.Row="1" Background="White" Foreground="Black">

            <!-- Getting Started (SAP Application + Technician Guide) -->
            <TabItem Header="Getting Started">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Swiss-Army Programmer (SAP) Application Overview" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="The SAP application simplifies firmware uploading by integrating complex configurations into an automated process." TextWrapping="Wrap" Foreground="Black"/>
                        <TextBlock Text="Developed using C# and Windows Presentation Foundation (WPF), it ensures compatibility across multiple Printed Circuit Boards (PCBs)." TextWrapping="Wrap" Foreground="Black"/>

                        <TextBlock Text="Technician Guide: Using the SAP App" FontWeight="Bold" Foreground="Black" Margin="10,5,0,0"/>

                        <!-- Step 1: Launching the Application -->
                        <TextBlock Text="Step 1: Launching the Application" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="1. Power on the Windows tablet running the SAP application." Foreground="Black"/>
                        <TextBlock Text="2. Open the Swiss-Army Programmer from the desktop or start menu." Foreground="Black"/>
                        <TextBlock Text="3. The main dashboard will display various options for configuration." Foreground="Black"/>

                        <!-- Step 2: Selecting the Product & PCB -->
                        <TextBlock Text="Step 2: Selecting the Product &amp; PCB" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="1. Locate the Product dropdown menu on the interface." Foreground="Black"/>
                        <TextBlock Text="2. Select the desired product category from the available options." Foreground="Black"/>
                        <TextBlock Text="3. Choose the correct Printed Circuit Board (PCB) configuration using the second dropdown." Foreground="Black"/>
                        <TextBlock Text="4. Confirm selection before proceeding." Foreground="Black"/>

                        <!-- Step 3: Uploading Firmware -->
                        <TextBlock Text="Step 3: Uploading Firmware" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="1. Ensure that the correct product and PCB type have been selected." Foreground="Black"/>
                        <TextBlock Text="2. Click the Start button to initiate the firmware upload process." Foreground="Black"/>
                        <TextBlock Text="3. Monitor the progress bar for real-time feedback." Foreground="Black"/>
                        <TextBlock Text="4. If necessary, click Stop to halt the upload." Foreground="Black"/>

                        <!-- Step 4: USB Microcontroller Interfacing -->
                        <TextBlock Text="Step 4: USB Microcontroller Interfacing" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="1. Connect the programming tool via USB:" Foreground="Black"/>
                        <TextBlock Text="   - MSP430 PCBs → Use MSP-FET Programming Tool." Foreground="Black"/>
                        <TextBlock Text="   - Microchip ATMega → Use Atmel AVR ISP Mk2 Programming Tool." Foreground="Black"/>
                        <TextBlock Text="2. Confirm that the device is recognized by the SAP application." Foreground="Black"/>
                        <TextBlock Text="3. Initiate the firmware flashing process for the selected microcontroller." Foreground="Black"/>
                        <TextBlock Text="4. Once completed, disconnect the hardware safely." Foreground="Black"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- About SENSIT Technologies -->
            <TabItem Header="About SENSIT Technologies">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="SENSIT Technologies specializes in the development of gas leak detection equipment. The company has introduced advanced solutions to streamline manufacturing processes, enhancing efficiency in firmware programming." TextWrapping="Wrap" Foreground="Black"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Supported Hardware -->
            <TabItem Header="Supported Hardware">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Supported Microcontrollers:" FontWeight="Bold" Foreground="Black"/>
                        <ListBox BorderThickness="0" Background="White" Foreground="Black">
                            <ListBoxItem Content="Texas Instruments MSP430"/>
                            <ListBoxItem Content="Microchip ATmega"/>
                            <ListBoxItem Content="STMicroelectronics STM32"/>
                            <ListBoxItem Content="Ezurio BL654 Series Bluetooth/NFC Module"/>
                            <ListBoxItem Content="Texas Instruments Battery Fuel Gauges"/>
                        </ListBox>

                        <TextBlock Text="Programming &amp; Debugging Tools:" FontWeight="Bold" Foreground="Black"/>
                        <ListBox BorderThickness="0" Background="White" Foreground="Black">
                            <ListBoxItem Content="MSP-FET"/>
                            <ListBoxItem Content="MSP-GANG"/>
                            <ListBoxItem Content="MPLAB PICkit 5"/>
                            <ListBoxItem Content="MPLAB ICE 4"/>
                            <ListBoxItem Content="MPLAB ICD 5"/>
                            <ListBoxItem Content="STLINK-V3MINIE"/>
                            <ListBoxItem Content="STLINK-V3SET"/>
                            <ListBoxItem Content="Arduino UNO R3"/>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Additional Resources -->
            <TabItem Header="Resources">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="For full documentation, visit the official Swiss-Army Programmer Wiki:" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Foreground="Blue" TextDecorations="Underline" Cursor="Hand"
                                   Text="Click here to open wiki"
                                   MouseDown="OpenWiki_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Close" Width="120" Height="35" Margin="5,10,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>