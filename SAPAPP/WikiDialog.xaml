<Window x:Class="SAPAPP.WikiDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Swiss-Army Programmer Wiki" Height="750" Width="900"
    WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
    Background="#EED202">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Header -->
        <Border Grid.Row="0" Padding="15" Background="White" CornerRadius="5" BorderBrush="Gray" BorderThickness="1" Margin="0,0,0,10">
            <TextBlock Text="Welcome to the Swiss-Army Programmer Wiki" FontSize="22" FontWeight="Bold" TextAlignment="Center" Foreground="Black"/>
        </Border>

        <!-- Search Box -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10" HorizontalAlignment="Center">
            <TextBox x:Name="SearchBox" Width="300" Height="35" Margin="5"/>
            <Button Content="Search" Width="100" Height="35" Click="SearchWiki_Click"/>
        </StackPanel>

        <!-- Tab Control for Different Pages -->
        <TabControl x:Name="MainTabControl" Grid.Row="2" Background="White" Foreground="Black">

            <!-- Introduction Tab -->
            <TabItem Header="Introduction">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Swiss-Army Programmer Overview" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="The SAP application helps streamline firmware uploads and device configuration through automation." TextWrapping="Wrap" Foreground="Black"/>
                        <TextBlock Text="For detailed information, visit the official wiki linked in the Resources section." TextWrapping="Wrap" Foreground="Black"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Technician Guide -->
            <TabItem Header="Technician Guide">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Step-by-Step Guide for Using the SAP App" FontSize="20" FontWeight="Bold" Foreground="Black"/>

                        <TextBlock Text="Step 1: Launching the Application" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="1. Power on the Windows tablet running the SAP application." Foreground="Black"/>
                        <TextBlock Text="2. Open the Swiss-Army Programmer from the desktop or start menu." Foreground="Black"/>
                        <TextBlock Text="3. The main dashboard will display various options for configuration." Foreground="Black"/>

                        <TextBlock Text="Step 2: Selecting the Product &amp; PCB" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="1. Locate the Product dropdown menu on the interface." Foreground="Black"/>
                        <TextBlock Text="2. Select the desired product category from the available options." Foreground="Black"/>
                        <TextBlock Text="3. Choose the correct Printed Circuit Board (PCB) configuration using the dropdown." Foreground="Black"/>
                        <TextBlock Text="4. Confirm selection before proceeding." Foreground="Black"/>

                        <TextBlock Text="Step 3: Uploading Firmware" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="1. Ensure the correct product and PCB type have been selected." Foreground="Black"/>
                        <TextBlock Text="2. Click the Start button to begin the firmware upload process." Foreground="Black"/>
                        <TextBlock Text="3. Monitor the progress bar for real-time feedback." Foreground="Black"/>
                        <TextBlock Text="4. If necessary, click Stop to halt the upload." Foreground="Black"/>

                        <TextBlock Text="Step 4: USB Microcontroller Interfacing" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="1. Connect the programming tool via USB:" Foreground="Black"/>
                        <TextBlock Text="   - MSP430 PCBs → Use MSP-FET Programming Tool." Foreground="Black"/>
                        <TextBlock Text="   - Microchip ATMega → Use Atmel AVR ISP Mk2 Programming Tool." Foreground="Black"/>
                        <TextBlock Text="2. Confirm that the device is recognized by the SAP application." Foreground="Black"/>
                        <TextBlock Text="3. Initiate the firmware flashing process for the selected microcontroller." Foreground="Black"/>
                        <TextBlock Text="4. Once completed, disconnect the hardware safely." Foreground="Black"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Essential Hardware Requirements -->
            <TabItem Header="Hardware Requirements">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Essential Hardware Requirements" FontSize="20" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Text="Required access to specialized microcontrollers and programming devices designed for specific testing purposes." TextWrapping="Wrap" Foreground="Black"/>

                        <StackPanel>
                            <!-- Texas Instruments MSP430 -->
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="0,5,0,5">
                                <StackPanel>
                                    <TextBlock Text="Texas Instruments MSP430" FontSize="18" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Text="Compatible Programming Tools: MSP-FET, MSP-GANG" Foreground="Black"/>
                                </StackPanel>
                            </Border>

                            <!-- Microchip Atmega -->
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="0,5,0,5">
                                <StackPanel>
                                    <TextBlock Text="Microchip Atmega" FontSize="18" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Text="Compatible Programming Tools: MPLAB PICkit 5, MPLAB ICE 4, MPLAB ICD 5" Foreground="Black"/>
                                </StackPanel>
                            </Border>

                            <!-- STMicroelectronics STM32 -->
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="0,5,0,5">
                                <StackPanel>
                                    <TextBlock Text="STMicroelectronics STM32" FontSize="18" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Text="Compatible Programming Tools: STLINK-V3MINIE, STLINK-V3SET" Foreground="Black"/>
                                </StackPanel>
                            </Border>

                            <!-- Ezurio BL654 Bluetooth/NFC -->
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="0,5,0,5">
                                <StackPanel>
                                    <TextBlock Text="Ezurio BL654 Bluetooth/NFC Module" FontSize="18" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Text="Utility Tool: UwTerminalX" Foreground="Black"/>
                                </StackPanel>
                            </Border>

                            <!-- Texas Instruments Battery Fuel Gauges -->
                            <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="0,5,0,5">
                                <StackPanel>
                                    <TextBlock Text="Texas Instruments Battery Fuel Gauges" FontSize="18" FontWeight="Bold" Foreground="Black"/>
                                    <TextBlock Text="Programming Interface: Arduino UART Programming" Foreground="Black"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Resources -->
            <TabItem Header="Resources">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="For full documentation, visit the official Swiss-Army Programmer Wiki:" FontWeight="Bold" Foreground="Black"/>
                        <TextBlock Foreground="Blue" TextDecorations="Underline" Cursor="Hand"
                                   Text="Click here to open wiki"
                                   MouseDown="OpenWiki_Click"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="10">
            <Button Content="Close" Width="120" Height="35" Margin="5,10,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>